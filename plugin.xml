<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-pingoauth" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>OAuthPlugin</name>

  <js-module name="OAuthPlugin" src="www/OAuthPlugin.js">
    <clobbers target="Authentication" />
  </js-module>
  <js-module name="jQuery" src="www/jquery.min.js">
    <runs/>
  </js-module>
  <dependency id="cordova-plugin-network-information" version="1.2.1" />
  <dependency id="cordova-plugin-appsettings" version="1.0.2" />
  <dependency id="cordova-plugin-secure-storage" version="2.4.0" />
  <platform name="ios">
    <preference name="oauthurl" />
    <preference name="client_id" />
    <preference name="client_secret" />
    <preference name="appname" />
    <preference name="offline_mode" default="No" />
    <preference name="profileapi" />
    <config-file target="config.xml" parent="/*">
      <preference name="oauthurl" value="$OAUTHURL" />
    </config-file>
    <config-file target="config.xml" parent="/*">
      <preference name="client_id" value="$CLIENT_ID" />
    </config-file>
    <config-file target="config.xml" parent="/*">
      <preference name="client_secret" value="$CLIENT_SECRET" />
    </config-file>
    <config-file target="config.xml" parent="/*">
      <preference name="appname" value="$APPNAME" />
    </config-file>
    <config-file target="config.xml" parent="/*">
      <preference name="offline_mode" value="$OFFLINE_MODE" />
    </config-file>
    <config-file target="config.xml" parent="/*">
      <preference name="profileapi" value="$PROFILEAPI" />
    </config-file>
  </platform>
  <platform name="android">
    <preference name="oauthurl" />
    <preference name="client_id" />
    <preference name="client_secret" />
    <preference name="appname" />
    <preference name="offline_mode" default="No" />
    <preference name="profileapi" />
    <!--<config-file target="AndroidManifest.xml" parent="/manifest/application">
      <meta-data  android:name="oauthurl" android:value="$OAUTHURL" />
      <meta-data  android:name="client_id" android:value="$CLIENT_ID" />
      <meta-data  android:name="client_secret" android:value="$CLIENT_SECRET" />
      <meta-data  android:name="appname" android:value="$APPNAME" />
      <meta-data  android:name="profileapi" android:value="$PROFILEAPI" />
      <meta-data  android:name="offline_mode" android:value="$OFFLINE_MODE" />
    </config-file>-->
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="oauthurl" value="$OAUTHURL" />
    </config-file>
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="client_id" value="$CLIENT_ID" />
    </config-file>
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="client_secret" value="$CLIENT_SECRET" />
    </config-file>
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="appname" value="$APPNAME" />
    </config-file>
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="offline_mode" value="$OFFLINE_MODE" />
    </config-file>
    <config-file target="res/xml/config.xml" parent="/*">
      <preference name="profileapi" value="$PROFILEAPI" />
    </config-file>
  </platform>
</plugin>